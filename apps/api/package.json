{
  "name": "@magpie/api",
  "version": "1.0.0",
  "description": "Magpie backend API built with Hono.js",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsc --noEmit && tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "test": "tsc --noEmit && NODE_ENV=test vitest run",
    "test:watch": "tsc --noEmit && NODE_ENV=test vitest",
    "test:coverage": "tsc --noEmit && NODE_ENV=test vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:seed:dev": "tsx src/db/seed.ts --dev",
    "db:reset": "rm -f ../../data/magpie.db* && pnpm db:generate && pnpm db:migrate && pnpm db:seed",
    "db:reset:dev": "rm -f ../../data/magpie.db* && pnpm db:generate && pnpm db:migrate && pnpm db:seed:dev",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.1",
    "@hono/zod-validator": "^0.7.2",
    "@mozilla/readability": "^0.6.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.10.2",
    "http-proxy": "^1.18.1",
    "jsdom": "^24.0.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.28.0",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@magpie/shared": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/http-proxy": "^1.17.16",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.17",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.2.2",
    "drizzle-kit": "^0.31.4",
    "supertest": "^7.1.4",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}